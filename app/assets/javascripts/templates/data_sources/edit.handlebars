							    <input type="text" id="count" class="input-medium" type='number' {{! bindAttr value=loadCount }}>
							</div>
						</div>
						<div class="control-group">
							<label class="control-label" for="input01">Enabled</label>
							<div class="controls">
							    {{!view Ember.Checkbox checkedBinding="enabled" id="enabled"}}
							</div>
						</div-->
						<div class="form-actions">
							<button type="submit" class="btn btn-primary">Save</button>
							<button class="btn" onclick="javascript:history.go(-1); return false;">Cancel</button>
						</div>
					</fieldset>
				</form>	
			</div>
		</div>
	</div>
</div>